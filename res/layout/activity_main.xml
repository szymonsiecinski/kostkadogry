<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnDodaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnUsun"
        android:layout_alignBottom="@+id/btnUsun"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/btnUsun"
        android:onClick="onAddDie"
        android:text="@string/button_dodaj" />

    <TextView
        android:id="@+id/txtLiczba1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnDodaj"
        android:layout_below="@+id/txtOpis"
        android:layout_marginTop="28dp"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txtLiczba5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnUsun"
        android:layout_alignLeft="@+id/btnDodaj"
        android:layout_marginBottom="39dp"
        android:text="5"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtOpis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/label_wartosci" />

    <Button
        android:id="@+id/buttonLosuj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onButtonClick"
        android:text="@string/button_losuj"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnUsun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonLosuj"
        android:layout_alignParentRight="true"
        android:onClick="onRemoveDie"
        android:text="@string/button_usun" />

    <ImageView
        android:id="@+id/imgKostka2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnUsun"
        android:layout_alignTop="@+id/imgKostka1"
        android:clickable="true"
        android:onClick="DieChange"
        android:src="@drawable/ic_launcher"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtLiczba2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtOpis"
        android:layout_alignTop="@+id/imgKostka2"
        android:text="2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtLiczba4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtLiczba2"
        android:layout_below="@+id/imgKostka2"
        android:layout_marginTop="25dp"
        android:text="4"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgKostka4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgKostka2"
        android:layout_alignTop="@+id/txtLiczba4"
        android:clickable="true"
        android:onClick="DieChange"
        android:src="@drawable/ic_launcher"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgKostka3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgKostka5"
        android:layout_alignTop="@+id/txtLiczba4"
        android:clickable="true"
        android:onClick="DieChange"
        android:src="@drawable/ic_launcher"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgKostka1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgKostka3"
        android:layout_alignTop="@+id/txtLiczba1"
        android:clickable="true"
        android:onClick="DieChange"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/txtLiczba3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtLiczba1"
        android:layout_alignTop="@+id/imgKostka3"
        android:text="3"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgKostka5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtOpis"
        android:layout_alignTop="@+id/txtLiczba5"
        android:clickable="true"
        android:onClick="DieChange"
        android:src="@drawable/ic_launcher"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtLiczba6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtLiczba4"
        android:layout_alignTop="@+id/imgKostka5"
        android:text="6"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgKostka6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnUsun"
        android:layout_alignTop="@+id/txtLiczba6"
        android:clickable="true"
        android:onClick="DieChange"
        android:src="@drawable/ic_launcher"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textZakres1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtLiczba4"
        android:layout_alignLeft="@+id/txtLiczba1"
        android:text="1-6"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textZakres3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgKostka3"
        android:layout_alignLeft="@+id/txtLiczba3"
        android:text="1-6"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textZakres2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtLiczba4"
        android:layout_alignLeft="@+id/txtLiczba2"
        android:text="1-6"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textZakres4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgKostka4"
        android:layout_alignLeft="@+id/txtLiczba4"
        android:text="1-6"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textZakres6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgKostka6"
        android:layout_alignLeft="@+id/txtLiczba6"
        android:text="1-6"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textZakres5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgKostka5"
        android:layout_alignLeft="@+id/txtLiczba5"
        android:text="1-6"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="invisible" />

</RelativeLayout>
